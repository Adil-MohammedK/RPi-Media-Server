version: '2'
services:

  sonarr:
    image: linuxserver/sonarr
    container_name: sonarr
    dns:
      - 8.8.8.8
      - 1.1.1.1
    environment:
      - PUID=1000
      - PGID=1000
      - TZ=Asia/Kolkata
      - UMASK_SET=022 #optional
    volumes:
      - ~/mnt/HDD1/Media/appdata/sonarr/data:/config
      - ~/mnt/HDD1/Media/Series:/tv
      - ~/mnt/HDD1/Media/downloads:/downloads
    ports:
      - 8989:8989
    restart: unless-stopped

  radarr:
    image: linuxserver/radarr
    dns:
      - 8.8.8.8
      - 1.1.1.1
    container_name: radarr
    environment:
      - PUID=1000
      - PGID=1000
      - TZ=Asia/Kolkata
      - UMASK=022 #optional
    volumes:
      -  ~/mnt/HDD1/Media/appdata/radarr/config:/config
      -  ~/mnt/HDD1/Media/movies:/movies
      -  ~/mnt/HDD1/Media/downloads:/downloads
      -  ~/mnt/HDD1/Media/animations:/animations
    ports:
      - 7878:7878
    restart: unless-stopped

  jackett:
    image: linuxserver/jackett
    container_name: jackett
    dns:
      - 8.8.8.8
      - 1.1.1.1
    environment:
      - PUID=1000
      - PGID=1000
      - TZ=Asia/Kolkata
      - AUTO_UPDATE=true #optional
      # - RUN_OPTS=<run options here> #optional
    volumes:
      -  ~/mnt/HDD1/Media/appdata/jackett/config:/config
      -  ~/mnt/HDD1/Media/downloads:/downloads
    ports:
      - 9117:9117
    restart: unless-stopped

  transmission:
    image: linuxserver/transmission
    container_name: transmission
    environment:
      - PUID=1000
      - PGID=1000
      - TZ=Asia/Kolkata
      - TRANSMISSION_WEB_HOME=/combustion-release/ #optional
      - USER=pi #optional
      - PASS=coolcool12 #optional
    dns:
      - 8.8.8.8
      - 1.1.1.1
    volumes:
      - ~/mnt/HDD1/Media/appdata/transmission/config:/config
      - ~/mnt/HDD1/Media/downloads:/downloads
    ports:
      - 9091:9091
      - 51413:51413
      - 51413:51413/udp

  deluge:
    image: linuxserver/deluge
    container_name: deluge
    dns:
      - 8.8.8.8
      - 1.1.1.1
    # network_mode: host
    environment:
      - PUID=1000
      - PGID=1000
      - TZ=Asia/Kolkata
      - UMASK=022 #optional
      - DELUGE_LOGLEVEL=error #optional
    volumes:
      - ~/mnt/HDD1/Media/appdata/deluge/config:/config
      - ~/mnt/HDD1/Media/downloads:/downloads
    dns:
      - 8.8.8.8
      - 1.1.1.1
    ports:
      - 8112:8112
      - 58846:58846
      - 58946:58946

