version: '3'
services:

  sonarr:
    image: linuxserver/sonarr:latest
    container_name: sonarr
    dns:
      - 8.8.8.8
      - 1.1.1.1
    environment:
      - PUID=1000
      - PGID=1000
      - TZ=Asia/Kolkata
    #  - UMASK_SET=022 #optional
    volumes:
      - ./volumes/sonarr/data:/config
      - ~/mnt/HDD1/Media/Series:/tv
      - ~/mnt/HDD1/Media/downloads:/downloads
    ports:
      - 8989:8989
    restart: unless-stopped

  radarr:
    image: linuxserver/radarr:latest
    dns:
      - 8.8.8.8
      - 1.1.1.1
    container_name: radarr
    environment:
      - PUID=1000
      - PGID=1000
      - TZ=Asia/Kolkata
      - UMASK=022 #optional
    volumes:
      -  ./volumes/radarr/config:/config
      -  ~/mnt/HDD1/Media/movies:/movies
      -  ~/mnt/HDD1/Media/downloads:/downloads
      -  ~/mnt/HDD1/Media/animation:/animations
    ports:
      - 7878:7878
    restart: unless-stopped
  
  bazarr:
    image: linuxserver/bazarr:latest
    container_name: bazarr
    environment:
      - PUID=1000
      - PGID=1000
      - TZ=Asia/Kolkata
      # - UMASK_SET=022 #optional
    volumes:
      - ./volumes/bazarr/config:/config
      - ~/mnt/HDD1/Media/movies:/movies
      - ~/mnt/HDD1/Media/animation:/animation
      - ~/mnt/HDD1/Media/Series:/tv
    ports:
      - 6767:6767
    dns: 
      - 8.8.8.8
      - 1.1.1.1
    restart: unless-stopped

  jackett:
    image: linuxserver/jackett:latest
    container_name: jackett
    dns:
      - 8.8.8.8
      - 1.1.1.1
    environment:
      - PUID=1000
      - PGID=1000
      - TZ=Asia/Kolkata
      - AUTO_UPDATE=true #optional
      # - RUN_OPTS=<run options here> #optional
    volumes:
      -  ./volumes/jackett/config:/config
      -  ~/mnt/HDD1/Media/downloads:/downloads
    ports:
      - 9117:9117
    restart: unless-stopped

  plex:
    image: ghcr.io/linuxserver/plex:latest
    container_name: plex
    network_mode: host
    environment:
      - PUID=1000
      - PGID=1000
      - VERSION=docker
      - UMASK_SET=022 #optional
      # - PLEX_CLAIM= #optional
    volumes:
      - ./volumes/plex/config:/config
      - ~/mnt/HDD1/Media/Series:/tv
      - ~/mnt/HDD1/Media/movies:/movies
      - ~/mnt/HDD1/Media/animation:/animation
      #- ./volumes/plex/transcode:/transcode
    restart: unless-stopped

  transmission-openvpn:
    image: haugene/transmission-openvpn
    container_name: transmission-openvpn
    cap_add:
      - NET_ADMIN
    volumes:
      - ./volumes/transmission-vpn/config:/config
      - ~/mnt/HDD1/Media/downloads:/downloads
      - ./volumes/FreeVPN/:/etc/openvpn/custom/
    environment:
      - OPENVPN_PROVIDER=custom
      - OPENVPN_USERNAME=${OPENVPN_USERNAME}
      - OPENVPN_PASSWORD=${OPENVPN_PASSWORD}
      - LOCAL_NETWORK=192.168.1.0/24
      - PUID=1000
      - PGID=1000
      - TZ=Asia/Kolkata
      - TRANSMISSION_WEB_UI=combustion #optional
      - TRANSMISSION_RPC_USERNAME=${TRANSMISSION_RPC_USERNAME}
      - TRANSMISSION_RPC_PASSWORD=${TRANSMISSION_RPC_PASSWORD}
      - TRANSMISSION_RPC_AUTHENTICATION_REQUIRED=true
      - TRANSMISSION_DOWNLOAD_DIR=/downloads/complete
      - TRANSMISSION_INCOMPLETE_DIR=/downloads/incomplete
      - TRANSMISSION_WATCH_DIR=/downloads/watch
      - TRANSMISSION_HOME=/downloads/transmission-home
    dns:
      - 8.8.8.8
      - 1.1.1.1
    logging:
      driver: json-file
      options:
        max-size: 10m
    ports:
      - '9093:9091'
    restart: unless-stopped

  tautulli:
    image: linuxserver/tautulli
    container_name: tautulli
    environment:
      - PUID=1000
      - PGID=1000
      - TZ=Asia/Kolkata
    volumes:
      - ./volumes/tautulli/config:/config
    ports:
      - 8181:8181
    dns: 
      - 8.8.8.8
      - 1.1.1.1
    restart: unless-stopped


